datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "./../generated/prisma"
}

model User{
  id        Int      @id @default(autoincrement())
  categories Category[]
  expenses  Expense[]
}

model Category{
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  deletedAt DateTime?
  expenses  Expense[]
}

model Expense{
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  amount      Float
  description String?
  date        DateTime
}

