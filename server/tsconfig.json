{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "lib": ["ES2020", "ES2024.Promise"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "allowImportingTsExtensions": true,

    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,

    "noEmit": true,

    "rootDir": "./",
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "nodenext",

    "baseUrl": "./",
    "paths": {
      "#src/*": ["src/*"],
      "#s/*": ["generated/@typespec/ts-schemas/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./typespec-helper.ts",
    "./generated/@typespec/ts-schemas/**/*.ts",
    "./generated/prisma/**/*.ts"
  ],
  "exclude": ["node_modules"]
}